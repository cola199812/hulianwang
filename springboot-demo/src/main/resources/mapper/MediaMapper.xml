<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.outdoor.demo.mapper.MediaMapper">
    <resultMap id="MediaMap" type="com.outdoor.demo.entity.Media">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="postId" column="post_id"/>
        <result property="type" column="type"/>
        <result property="url" column="url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="album" column="album"/>
        <result property="tags" column="tags"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.outdoor.demo.entity.Media" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO media (user_id, post_id, type, url, thumbnail_url, album, tags, create_time)
        VALUES (#{userId}, #{postId}, #{type}, #{url}, #{thumbnailUrl}, #{album}, #{tags}, NOW())
    </insert>

    <select id="findByUserId" parameterType="long" resultMap="MediaMap">
        SELECT id, user_id, post_id, type, url, thumbnail_url, album, tags, create_time
        FROM media
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <select id="findByPostId" parameterType="long" resultMap="MediaMap">
        SELECT id, user_id, post_id, type, url, thumbnail_url, album, tags, create_time
        FROM media
        WHERE post_id = #{postId}
        ORDER BY create_time DESC
    </select>
    
    <delete id="deleteByPostId" parameterType="long">
        DELETE FROM media WHERE post_id = #{postId}
    </delete>
</mapper>
