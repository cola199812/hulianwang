<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.outdoor.demo.mapper.PostVideoMapper">
    <resultMap id="PostVideoMap" type="com.outdoor.demo.entity.PostVideo">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="videoUrl" column="video_url"/>
        <result property="coverUrl" column="cover_url"/>
        <result property="duration" column="duration"/>
    </resultMap>

    <insert id="insert" parameterType="com.outdoor.demo.entity.PostVideo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post_video (post_id, video_url, cover_url, duration)
        VALUES (#{postId}, #{videoUrl}, #{coverUrl}, #{duration})
    </insert>

    <select id="findByPostId" parameterType="long" resultMap="PostVideoMap">
        SELECT id, post_id, video_url, cover_url, duration
        FROM post_video
        WHERE post_id = #{postId}
    </select>
</mapper>
