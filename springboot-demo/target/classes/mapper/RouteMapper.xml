<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.outdoor.demo.mapper.RouteMapper">
    <resultMap id="RouteMap" type="com.outdoor.demo.entity.Route">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="distance" column="distance"/>
        <result property="level" column="level"/>
        <result property="description" column="description"/>
        <result property="creatorId" column="creator_id"/>
    </resultMap>

    <insert id="insert" parameterType="com.outdoor.demo.entity.Route" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO route (name, distance, level, description, creator_id)
        VALUES (#{name}, #{distance}, #{level}, #{description}, #{creatorId})
    </insert>

    <select id="findById" parameterType="long" resultMap="RouteMap">
        SELECT id, name, distance, level, description, creator_id FROM route WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="RouteMap">
        SELECT id, name, distance, level, description, creator_id FROM route ORDER BY id DESC
    </select>
</mapper>

